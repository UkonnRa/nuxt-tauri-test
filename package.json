{
  "name": "white-rabbit",
  "productName": "White Rabbit",
  "description": "Alice's Wonderland White Rabbit. Working for family / personal accounting.",
  "author": "Ukonn Ra <ukonnra@outlook.com>",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.3.1",
  "engines": {
    "yarn": ">=4",
    "node": ">=22"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky",
    "upgrade": "yarn upgrade-interactive && cargo update && cargo upgrade --incompatible --pinned",
    "dev:tauri": "yarn workspace @white-rabbit/app-tauri run tauri dev",
    "dev:ssr": "yarn workspace @white-rabbit/app-ssr run dev",
    "lint:rs": "cargo fmt --check && cargo clippy",
    "lint:fix:rs": "cargo sort -w && cargo fmt && cargo clippy --fix --allow-dirty --allow-staged",
    "lint:stylelint": "stylelint '**/*.{vue,scss,css}' --ignore-path .prettierignore",
    "lint:prettier": "prettier '**/*.{vue,ts,js,json}'",
    "lint:eslint": "yarn workspaces foreach --from 'packages/*' -Rpitv run lint:eslint",
    "lint:fix:eslint": "yarn workspaces foreach --from 'packages/*' -Rpitv run lint:fix:eslint",
    "lint:tsc": "yarn workspaces foreach --from 'packages/*' -Rpitv run lint:tsc",
    "lint:fix": "yarn lint:prettier --write && yarn lint:stylelint --fix && yarn lint:fix:eslint && yarn lint:fix:rs",
    "lint": "yarn lint:prettier --check && yarn lint:stylelint && yarn lint:rs && yarn lint:eslint && yarn lint:tsc",
    "build": "yarn workspaces foreach --from 'packages/*' -Rpitv run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.6.0",
    "@nuxt/eslint": "^0.3.13",
    "@tailwindcss/typography": "^0.5.13",
    "@types/eslint": "^8.56.10",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.6",
    "@types/node": "^20.14.9",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/compiler-dom": "^3.4.31",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "commitizen": "^4.3.0",
    "commitlint": "^19.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.26.0",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.6",
    "sass-loader": "^14.2.1",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1",
    "vite": "^5.3.2",
    "vitest": "^1.6.0",
    "vue": "^3.4.31",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.22"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
